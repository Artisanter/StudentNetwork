@model IEnumerable<StudentNetwork.Models.Group>

  <h3>@Localizer["Search"]</h3>

<form asp-controller="Group" asp-action="Search">
    <p>
        <input type="text" name="searchString">
        <input type="submit" value="@Localizer["Search"]" />
    </p>
</form>
<p>
    <a asp-controller="Group" asp-action="Create">@Localizer["Create"]</a>
</p>

@foreach (var item in Model)
{
    @await Html.PartialAsync("_Details", item);
}