@model StudentNetwork.ViewModels.GroupModel

@{
    ViewData["Title"] = @Localizer["Create"];
}

<h2>Создать группу</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Localizer["Номер"]" class="control-label"></label>
                <input asp-for="Number" class="form-control" type="number"/>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Localizer["Name"]" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

